/**
 * Demultiplexor:
 * {a, b} = {in, 0} if sel == 0
 *          {0, in} if sel == 1
 */

CHIP DMux {
    IN in, sel;
    OUT a, b;

    PARTS:
    // if sel == 0 then a = in, b = 0
    Not(in=sel, out=notSel);
    And(a=in, b=notSel, out=a);
    // if sel == 1 then a = 0, b = in
    And(a=in, b=sel, out=b);
}
